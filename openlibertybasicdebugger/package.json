{
    "name": "openlibertybasicdebugger",
    "displayName": "OpenLibertyBasicDebugger",
    "description": "",
    "version": "0.0.1",
    "engines": 
    {
        "vscode": "^1.89.0"
    },
    "categories": 
    [
      "Debuggers"
    ],
    "activationEvents": [],
    "main": "./src/extension.js",
    "contributes": 
    {
        "breakpoints": [{ "language": "libertybasic" }],
        "debuggers": 
        [
            {
                "type": "OpenLibertyBasicDebugger",
                "label": "Liberty Basic Debug",
                "osx": 
                {
                    "program": "../RunnerDebugger/DerivedData/OpenLibertyBasic/Build/Products/Debug/OpenLibertyBasic"
                },
                "configurationAttributes": 
                {
                    "launch": 
                    {
                        "required": ["program"],
                        "properties": 
                        {
                            "program": 
                            {
                                "type": "string",
                                "description": "Absolute path to a text file.",
                                "default": "${workspaceFolder}/${command:AskForProgramName}"
                            },
                            "stopOnEntry": 
                            {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            }
                        }
                    }
                },
                "initialConfigurations": 
                [
                    {
                        "type": "OpenLibertyBasicDebugger",
                        "request": "launch",
                        "name": "Ask for file name",
                        "program": "${workspaceFolder}/${command:AskForProgramName}",
                        "stopOnEntry": true
                    }
                ],
                "configurationSnippets": 
                [
                    {
                        "label": "Liberty Basic Debug: Launch",
                        "description": "A new configuration for launching a Liberty Basic debug program",
                        "body": 
                        {
                            "type": "OpenLibertyBasicDebugger",
                            "request": "launch",
                            "name": "${2:Launch Program}",
                            "program": "^\"\\${workspaceFolder}/${1:Program}\""
                        }
                    }
                ],
                "variables": 
                {
                    "AskForProgramName": "openlibertybasicdebugger.getProgramName"
                }
            }
        ],
        "menus": 
        {
            "editor/title/run": 
            [
                {
                    "command": "openlibertybasicdebugger.runEditorContents",
                    "when": "resourceLangId == libertybasic",
                    "group": "navigation@1"
                },
                {
                    "command": "openlibertybasicdebugger.debugEditorContents",
                    "when": "resourceLangId == libertybasic",
                    "group": "navigation@2"
                }
            ],
            "commandPalette": 
            [
                {
                    "command": "openlibertybasicdebugger.debugEditorContents",
                    "when": "resourceLangId == libertybasic"
                },
                {
                    "command": "openlibertybasicdebugger.runEditorContents",
                    "when": "resourceLangId == libertybasic"
                }
            ]
        },
        "commands": 
        [
            {
                "command": "openlibertybasicdebugger.debugEditorContents",
                "title": "Debug File",
                "category": "OpenLibertyBasic Debug",
                "enablement": "!inDebugMode",
                "icon": "$(debug-alt)"
            },
            {
                "command": "openlibertybasicdebugger.runEditorContents",
                "title": "Run File",
                "category": "OpenLibertyBasic Debug",
                "enablement": "!inDebugMode",
                "icon": "$(play)"
            }
        ]
    },
    "scripts": 
    {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "devDependencies": 
    {
        "@types/vscode": "^1.89.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.3.9"
    }
}
